<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:property-placeholder location="classpath:configs/bonecp.properties"/>

    <bean id="dataSource" class="com.jolbox.bonecp.BoneCPDataSource" destroy-method="close">
        <property name="driverClass" value="${bonecp.driverClass}" />
        <property name="jdbcUrl" value="${bonecp.jdbcUrl}" />
        <property name="username" value="${bonecp.username}" />
        <property name="password" value="${bonecp.password}" />
    </bean>

    <bean class="org.apache.commons.logging.impl.SimpleLog" id="logger">
        <constructor-arg value="[BONECP-COMMANDS]" />
    </bean>

    <bean factory-bean="dataSource" factory-method="getConnection" id="updaterConnection" />

    <bean id="updateQueue" class="java.util.concurrent.LinkedBlockingQueue">
        <constructor-arg index="0" value="1000" />
    </bean>

    <bean class="commands.ExecutionResult" id="poisonResult">
        <property name="id" value="-1000" />
    </bean>

    <bean class="commands.ExecutionResult" id="forceUpdateResult">
        <property name="id" value="-1100" />
    </bean>

    <bean id="schedulerPool" class="java.util.concurrent.Executors" factory-method="newCachedThreadPool">
    </bean>

    <bean id="executionPool" class="java.util.concurrent.Executors" factory-method="newCachedThreadPool">
    </bean>

    <bean id="commandFactory" class="commands.CommandOneFactory">
        <property name="logger" ref="logger" />
        <property name="updateQueue" ref="updateQueue" />
    </bean>

    <bean id="schedulerFactory" class="commands.CommandSchedulerFactory">
        <property name="dataSource" ref="dataSource" />
        <property name="commandFactory" ref="commandFactory" />
        <property name="commandsPool" ref="executionPool" />
        <property name="logger" ref="logger" />
    </bean>

    <bean class="commands.BufferedUpdater" id="bufferedUpdater" init-method="init" />

</beans>